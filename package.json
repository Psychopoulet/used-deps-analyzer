{

  "name": "used-deps-analyzer",
  "version": "0.1.8",
  "description": "Analyse js code to force match between installed & used deps.",

  "type": "commonjs",
  "typings": "./lib/cjs/main.d.cts",
  "main": "./lib/cjs/main.cjs",

  "exports": {
    ".": {
      "require": {
        "types": "./lib/cjs/main.d.cts",
        "default": "./lib/cjs/main.cjs"
      }
    }
  },

  "scripts": {

    "prepare": "npx husky || true",

    "lint-bin": "npx eslint --config .eslintrc-bin.js --ext .js,.cjs,.mjs ./bin/**/*",
    "lint-back": "npx eslint --config .eslintrc-back.js --ext .ts,.cts,.mts ./lib/src/**/*",
    "lint-tests": "npx eslint --config .eslintrc-tests.js --ext .js,.cjs,.mjs ./test/**/*",
    "lint": "npm run lint-bin && npm run lint-back && npm run lint-tests",

    "clean-back": "npx rimraf ./lib/cjs",
    "clean": "npm run clean-back",

    "build-back": "npm run clean-back && npx tsc --project ./tsconfig.json",
    "build": "npm run build-back",

    "check-requires": "npx used-deps-analyzer ./package.json ./lib/src --no-dev",
    "check-updates": "npx check-version-modules --no-fail-at-major --fail-at-minor --fail-at-patch",
    "unit-tests": "npm run-script build && npx nyc --reporter=html --reporter=text mocha",

    "tests": "npm run lint && npm run check-requires && npm run check-updates && npm run unit-tests"

  },
  "bin": {
    "used-deps-analyzer": "./bin/cmd.js"
  },
  "files": [
    "/bin",
    "/lib/cjs"
  ],
  "engines": {
    "node": ">=22.22.0"
  },
  "dependencies": {},
  "devDependencies": {
    "@types/node": "25.2.3",
    "check-version-modules": "2.2.2",
    "eslint-plugin-personnallinter": "git+ssh://git@github.com/Psychopoulet/eslint-plugin-personnallinter",
    "husky": "9.1.7",
    "mocha": "11.7.5",
    "nyc": "17.1.0",
    "rimraf": "6.1.3",
    "typescript": "5.9.3"
  },
  "optionalDependencies": {
    "colors": "1.4.0"
  },

  "husky": {
    "hooks": {
      "pre-commit": "npm run lint",
      "pre-push": "npm run unit-tests"
    }
  },

  "keywords": [
    "js",
    "jsx",
    "ts",
    "tsx",
    "deps",
    "analyze"
  ],
  "author": "SÃ©bastien VIDAL",
  "license": "ISC",

  "homepage": "https://github.com/Psychopoulet/used-deps-analyzer#readme",
  "repository": {
    "type": "git",
    "url": "git://github.com/Psychopoulet/used-deps-analyzer.git"
  },
  "bugs": {
    "url": "https://github.com/Psychopoulet/used-deps-analyzer/issues"
  }

}
